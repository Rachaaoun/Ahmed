{% extends 'Base_admin.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <h1>Reservation index</h1>
<a href="{{ path('tri') }}">trier liste par prix</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>ListHotel</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.date ? reservation.date|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.nom }}</td>
                <td>{{ reservation.prenom }}</td>
                <td>{{ reservation.listHotel }}</td>
                <td>{{ reservation.prix }}</td>
                <td>
                    <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}"><button type="button" class="btn btn-danger">Show</button></a>
                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}"><button type="button" class="btn btn-success">edit</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_new') }}"><button type="button" class="btn btn-primary">Create new</button>       </a>
{% endblock %}
